<% layout('layout/boilerplate') %>
<h1>Beautiful Campgrounds </h1>

<%for (let campground of campgrounds){ %>

<div class="card">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="<%=campground.image%>" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= campground.title %> </h5>
                <p class="card-text"> <%= campground.description %> </p>
                <p class="card-text text-muted"> <%= campground.location %> </p>
                <a href="campgrounds/<%= campground._id %>" class="button-primary">View <%= campground.title %> </a>
            </div>
        </div>
    </div>

</div>

<% } %>


<a href="/campground/new">Post Campground</a>